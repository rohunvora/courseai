{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "nixpacks",
    "buildCommand": "npm install && npm run build"
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "npm start",
    "healthcheckPath": "/health",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "environments": {
    "production": {
      "build": {
        "buildCommand": "npm install && npm run build"
      },
      "deploy": {
        "numReplicas": 2
      }
    },
    "preview": {
      "build": {
        "buildCommand": "npm install && npm run build"
      },
      "deploy": {
        "numReplicas": 1
      }
    }
  }
}